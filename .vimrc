" Disable compatability mode
set nocompatible

colorscheme evening

set autoread
set encoding=utf-8
set number
set cursorline
set showcmd
set laststatus=2
set ttyfast
set wildignorecase

set smarttab
set autoindent
set smartindent

syntax enable

set textwidth=80
"set colorcolumn=80

set diffopt+=iwhite

set hlsearch
set incsearch
set ignorecase
set smartcase
set gdefault

filetype plugin indent on

set backupdir=~/tmp/vim/
set directory=~/tmp/vim/
